{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "C/C++: cl.exe kompiluj wszystko",
			"command": "cl.exe",
			"args": [
				"/std:c++17",
				"/Zi",
				"/EHsc",
				"/nologo",
				"/I${workspaceFolder}\\include",
				"/Fe:",
				"${workspaceFolder}\\my_build\\main.exe",
				"${workspaceFolder}\\src\\*.cpp"
			],
			"options": {
				"cwd": "${workspaceFolder}\\my_build\\"
			},
			"problemMatcher": [
				"$msCompile"
			],
			"group": "build",
			"detail": "kompilator: cl.exe"
		}
		
	]
}